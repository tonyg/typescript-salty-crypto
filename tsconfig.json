{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2017", "DOM"],
    "declaration": true,
    "baseUrl": ".",
    "rootDirs": ["src", "test"],
    "outDir": "lib",
    "declarationDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "sourceMap": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["src/**/*", "test/**/*"]
}
